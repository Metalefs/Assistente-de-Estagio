@model Assistente_de_Estagio.Areas.Administracao.Models.AlteracoesEntidadeViewModel
@using ADE.Dominio.Models
@using ADE.Utilidades.Extensions
@{
    ViewData["Title"] = "ADE - Visualizar Alteracoes Entidade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="card-header col-lg-12">
        Alterações feitas em @Model.DescricaoEntidade
        <a class="fa fa-arrow-left" onclick="window.history.back();"></a>
    </div>
</div>
<div class="row">
    @if (Model != null)
    {
        @foreach (AlteracaoEntidadesSistema alteracao in Model.Alteracoes)
        {
            <div class="jumbotron col-md-6">
                <h4>@alteracao.Entidade.ObterNomeEnum() - @Model.DescricaoEntidade</h4>
                <hr />
                <p class="h6-responsive">@alteracao.MensagemDePropriedadesEmHTMLOmitindoAtributos("md-form")</p>
            </div>
        }
    }
</div>


