@model Assistente_de_Estagio.Areas.Administracao.Models.VisualizarEntidadeViewmodel<Curso>
@using ADE.Dominio.Models
@using ADE.Utilidades.Extensions
@{
    ViewData["Title"] = "ADE- Visualizar Entidade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="">
    <div class="row">
        <div class="card-header col-lg-12">
            <h5>Visualizar Entidade </h5>
            <h6>Curso : @Model.Entidade.NomeCurso - @Model.Entidade.Instituicao.ExibirEntidadeColorCoded() <a class="fa fa-arrow-left float-lg-right" onclick="window.history.back();"></a></h6>
        </div>
    </div>
    <div class="row chart-container" name="middle-charts" id="middle-charts">
        <div class="col-md-8 card-body" id="line-chart-div">
            <div id="line-chart-canvas"></div>
            <p>Criado em: <span class="h3-responsive">@Model.Entidade.DataHoraInclusao</span> </p>
            <p>Última modificação: <span class="h3-responsive">@Model.Entidade.DataHoraUltimaAlteracao</span></p>
            @Html.ActionLink("Alterar", "Editar", "GerenciamentoCurso", new { idCurso = Model.Entidade.Identificador }, new { Class = "btn btn-deep-orange" })
            @Html.ActionLink("Voltar ao Gerenciamento", "Index", "GerenciamentoCurso", new { }, new { Class = "btn admin-back-btn floating-button" })
        </div>
        <div class="col-md-4 instrucao">
            <p><span class="h3-responsive">@Model.ListaAlteracoes.Count</span> Alterações totais</p>
            <div class="md-form row">
                <a class="btn btn-blue" href="./VisualizarAlteracoesEntidade?id=@Model.Entidade.Identificador">Visualizar alterações</a>
            </div>
        </div>
    </div>
</div>