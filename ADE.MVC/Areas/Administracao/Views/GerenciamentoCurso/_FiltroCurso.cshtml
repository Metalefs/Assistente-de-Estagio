@model PaginatedList<Curso>
@using Assistente_de_Estagio.Areas.Shared;
@using ADE.Dominio.Models;
@using ADE.Dominio.Models.Enums

<div class="filtro">
    <form action="/Administracao/GerenciamentoCurso/Filtrar" method="get">
        <div class="row" style="margin:0 auto;width:fit-content;">
            <div class="col-md-4">
                <span>NomeCurso</span>
                <select name="NomeFaculdade" class="form-control">
                @foreach (var item in Model)
                {
                    <option value="@item.NomeCurso" name="@item.NomeCurso">@item.NomeCurso</option>                        
                }  
                </select>
            </div>
            <div class="col-md-4">
                <span>Coordenador</span>
                <select name="NomeOrientador" class="form-control">
                    <option value="" selected>Selecione o coordenador</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.CoordenadorCurso" name="@item.CoordenadorCurso">@item.CoordenadorCurso</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <span>Tipo Curso</span>
                @Html.DropDownList("Etapa",
                    new SelectList(Enum.GetNames(typeof(EnumTipoCurso))),
                    "Selecione o tipo",
                    new { @class = "form-control", @name = "enumTipo" })
               
            </div>
            <button class="btn filtrobtn" type="submit">Filtrar</button>
        </div>
    </form>
</div>
