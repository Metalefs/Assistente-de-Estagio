@page 
@using  Assistente_de_Estagio.Areas.Identity.Pages.Account;
@model ExternalLoginModel
@{
    ViewData["Title"] = "Registrar";
}
<div class="container card-body">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <h4>Associe sua conta @Model.LoginProvider.</h4>
    <hr />
    <p class="text-info">
        Você se autenticou com sucesso usando o <strong>@Model.LoginProvider</strong>.
        Por favor, insira um e-mail para sua conta do ADE e clique no botão registrar abaixo.
    </p>
    <div class="md-form">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" type="text" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Registrar</button>
        </form>
    </div>
    <a href="/" class="btn btn-primary">Voltar</a>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

