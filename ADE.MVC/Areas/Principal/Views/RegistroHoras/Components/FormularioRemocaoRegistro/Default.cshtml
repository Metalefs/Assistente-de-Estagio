@model ADE.Dominio.Models.RegistroDeHoras

<form method="post" action="/Principal/RegistroHoras/RemoverRegistroHora">
    <input type="hidden" name="Identificador" value="@Model.Identificador" required>
    <div class="input-field">
        <div class="row">
            <div class="col col-md-12">
                <i class="material-icons prefix">mode_edit</i>
                <label>Atividade</label>
                <input type="text" name="Atividade" value="@Model.Atividade" disabled />
            </div>
        </div>
        <div class="row">
            <div class="col col-md-4">
                <label>Data</label>
                <input type="text" class="datepicker" value="@Model.Data.ToShortDateString()" disabled />
            </div>
            <div class="col col-md-4">
                <label>Inicio</label>
                <input type="text" class="timepicker" id="horainico-edit" value="@Model.HoraInicio.ToShortTimeString()" disabled />
            </div>
            <div class="col col-md-4">
                <label>Fim</label>
                <input type="text" class="timepicker" id="horafim-edit" value="@Model.HoraFim.ToShortTimeString()" disabled />
            </div>
        </div>
        <div class="row">
            <div class="col col-md-8">
                <span class="calculo-carga-horaria">Carga Horária: @Model.CargaHoraria Minutos</span>
                <input class="calculo-carga-horaria-input" type="hidden" disabled />
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary right" value="">Confirmar</button>
            </div>
        </div>
    </div>
</form>

<script type="module">
    const moduleSpecifier = './Scripts/ADE/Principal/RegistroHoras/TabelaHoras.js';
    const { CalculoHoras, EditorRegistroHoras } = await import(moduleSpecifier); 
    let calculo_horas = new CalculoHoras("calculo-carga-horaria");
    let EditorRegistro = new EditorRegistroHoras();
    CreateDatePicker();
    CreateTimePicker();
</script>