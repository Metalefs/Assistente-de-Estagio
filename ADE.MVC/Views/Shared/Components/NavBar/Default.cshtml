@using Microsoft.AspNetCore.Identity
@using ADE.Dominio.Models.Individuais
@using ADE.Utilidades.Extensions
@model UsuarioADE
@inject SignInManager<UsuarioADE> SignInManager
@{ string LinkPrincipal = User.ShowDefaultInterface(ViewData["Title"].ToString()) == true ? "/Principal/UserHome" : "/";}
<nav class="show-on-medium-and-up nav navbar-default navbar-ADE">
    <div class="container-fluid">
        @if (SignInManager.IsSignedIn(User))
        {
            <a href="#" data-target="slide-out" class="sidenav-trigger fa waves-effect fa-bars text-dark d-block sidebarCollapse" id="sidebarCollapse" style="margin: 10px;"></a>
        }
        <div class="navbar-header">
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="user-area-icon account-details">
                    <div class="user-notification-icon">
                        <p id="dropdown-notifications_div-count" class="notifications-div-count"></p>
                        <a href='#' data-target='dropdown-notifications_div' class="dropdown-trigger btn waves-effect waves-light input-group-prepend dropdown-toggle">
                            <span class="fa fa-bell"></span>
                        </a>
                    </div>
                    <a href='#' data-target='dropdown-notifications_div-account-info' class="dropdown-trigger btn waves-effect waves-light input-group-prepend dropdown-toggle">
                        <span class="fa ">
                            <i class="large material-icons" style="line-height: 46px;">person</i>
                        </span>
                    </a>
                </div>
            }
        </div>
    </div>
</nav>
@if (Model != null)
{
    <vc:user-details usuario="Model" id-componente="notifications_div"></vc:user-details>
}